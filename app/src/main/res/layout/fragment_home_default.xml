<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home_default"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/budgetID"
        android:layout_width="91dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/your_budget"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/showRecipesID"
        android:layout_width="206dp"
        android:layout_height="46dp"
        android:layout_marginEnd="8dp"
        android:text="@string/button_recipes"
        app:layout_constraintBaseline_toBaselineOf="@+id/budgetID"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/your_budget"
        android:layout_width="92dp"
        android:layout_height="26dp"
        android:text="Je budget:"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/budgetID"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>